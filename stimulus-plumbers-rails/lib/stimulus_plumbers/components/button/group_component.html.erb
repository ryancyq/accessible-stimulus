<%= render ContainerComponent.new **component_attrs do %>
  <% if direction == :right %>
    <% if secondary_buttons? %>
      <% secondary_buttons.each do |button| %>
        <%= button %>
      <% end %>
    <% end %>
    <% if primary_button? %>
      <%= primary_button %>
    <% end %>
  <% else %>
    <% if primary_button? %>
      <%= primary_button %>
    <% end %>
    <% if secondary_buttons? %>
      <% secondary_buttons.each do |button| %>
        <%= button %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
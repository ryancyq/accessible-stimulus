<% content_markup = capture do %>
  <% if scrollable %>
    <%= content %>
  <% else %>
    <%= content %>
  <% end %>
<% end %>


<%= render ContainerComponent.new tag: :div, **component_attrs do %>
  <% if activator? %>
    <%= activator %>
  <% elsif button? %>
    <%= button %>
  <% end %>

  <% if interactive %>
    <template>
      <%= content_markup %>
    </template>
  <% else %>
    <%= content_markup %>
  <% end %>
<% end %>

{
  "name": "@accessible-stimulus/controllers",
  "version": "0.1.0",
  "description": "Accessible Stimulus controllers for UI components following WCAG standards",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "a11y": "npm run build && npm run a11y:check",
    "a11y:check": "node scripts/a11y-check.js",
    "lint": "eslint src --ext .js",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "accessibility",
    "a11y",
    "stimulus",
    "hotwire",
    "ui-components",
    "wcag",
    "aria",
    "focus-management",
    "semantic-html"
  ],
  "author": "Ryan Chang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanchang/accessible-stimulus.git",
    "directory": "stimulus"
  },
  "peerDependencies": {
    "@hotwired/stimulus": "^3.0.0 || ^2.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@hotwired/stimulus": "^3.2.2",
    "@vitejs/plugin-legacy": "^5.4.3",
    "@vitest/ui": "^1.6.0",
    "axe-core": "^4.10.2",
    "eslint": "^8.57.1",
    "jsdom": "^24.1.3",
    "playwright": "^1.48.2",
    "prettier": "^3.3.3",
    "vite": "^5.4.11",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

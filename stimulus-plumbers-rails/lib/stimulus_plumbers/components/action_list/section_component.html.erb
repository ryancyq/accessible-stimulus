<%= render ContainerComponent.new tag: :div, **component_attrs do %>
  <% if title.present? %>
    <p><%= title %></p>
  <% end %>
  <% if items? %>
    <ul>
      <% items.each do |item| %>
        <li><%= item %></li>
      <% end %>
    </ul>
  <% else %>
    <%= content %>
  <% end %>
<% end %>

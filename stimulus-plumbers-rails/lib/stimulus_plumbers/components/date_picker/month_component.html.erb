<%= tag.div data: { controller: stimulus_controller, action: stimulus_controller_actions.join(" ") } do %>
  <%= tag.div class: "flex justify-between" do %>
    <%= tag.button data: { "#{stimulus_controller_target}": "previous" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
      </svg>
    <% end %>
    <%= tag.div do %>
      <%= tag.span data: { "#{stimulus_controller_target}": "month" } %>
      <%= tag.span data: { "#{stimulus_controller_target}": "year" } %>
      <%=%>
    <% end %>
    <%= tag.button data: { "#{stimulus_controller_target}": "next" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
      </svg>
    <% end %>
  <% end %>
  <%= tag.div class: "grid grid-cols-7 place-items-center", data: { "#{stimulus_controller_target}": "daysOfWeek" } %>
  <%= tag.div class: "grid grid-cols-7 place-items-center", data: { "#{stimulus_controller_target}": "daysOfMonth" }, role: "grid" %>
<% end %>